@page "/"
@using Wangkanai.Detection.Services
@using Microsoft.AspNetCore.Authorization
@inject ISnackbar SnackbarService
@inject IDetectionService DetectionService 

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@OnClick">Show a RenderFragment snackbar</MudButton>

@code {
    [Inject] public IDetectionService detectionService { get; set; }  <!-- Inject IDetectionService -->

    private void OnClick()
    {
        var browser = detectionService.Browser.Name;
        var platform = detectionService.Platform.Name + " "  +detectionService.Platform.Version;
       


        Console.WriteLine(platform.ToString()  +" " + browser.ToString()+" ");

       
    }
}

